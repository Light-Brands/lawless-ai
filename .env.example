# Lawless AI Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# REQUIRED: Core Configuration
# =============================================================================

# App URL (used for OAuth redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# GitHub OAuth (for repository access)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# OPTIONAL: Supabase Cloud Persistence (recommended for production)
# =============================================================================

# Supabase Project URL (Settings > API > Project URL)
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co

# Supabase Anon Key (Settings > API > Project API keys > anon public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...

# Supabase Service Role Key (Settings > API > Project API keys > service_role secret)
# NEVER expose this in frontend - server-side only
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# =============================================================================
# OPTIONAL: Security
# =============================================================================

# PIN protection (4-digit code to access the app)
APP_PIN=8888

# Token encryption key (exactly 32 characters for AES-256)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex').slice(0, 32))"
ENCRYPTION_KEY=your-32-character-secret-key-ok

# =============================================================================
# OPTIONAL: Backend Server
# =============================================================================

# Backend API URL (for terminal WebSocket connections)
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# Backend API key (for authenticating frontend to backend)
BACKEND_API_KEY=your-backend-api-key

# =============================================================================
# OPTIONAL: Third-party Integrations
# =============================================================================

# Vercel API token (for deployment features)
# VERCEL_TOKEN=

# =============================================================================
# OPTIONAL: Oracle Cloud Infrastructure (OCI)
# =============================================================================

# OCI Authentication
OCI_USER_OCID=ocid1.user.oc1..your-user-ocid-here
OCI_TENANCY_OCID=ocid1.tenancy.oc1..your-tenancy-ocid-here
OCI_REGION=us-chicago-1
OCI_FINGERPRINT=xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx

# Path to your OCI private key (PEM file)
OCI_PRIVATE_KEY_PATH=./keys/oci_api_key.pem
# Or provide the key content directly (base64 encoded)
# OCI_PRIVATE_KEY_BASE64=

# OCI Compute (for VM deployment)
OCI_COMPARTMENT_OCID=
OCI_AVAILABILITY_DOMAIN=
OCI_SUBNET_OCID=
